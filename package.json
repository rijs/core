{
  "name": "rijs.core",
  "version": "0.0.4",
  "main": "dist",
  "author": "Pedram Emrouznejad (https://github.com/pemrouz)",
  "description": "Ripple Core",
  "repository": {
    "type": "git",
    "url": "git://github.com/rijs/core.git"
  },
  "scripts": {
    "ignore": "find ./dist -type f -exec sed -i \"s/var _interopRequire/\\/* istanbul ignore next *\\/\\nvar _interopRequire/g\" {} ;",
    "babel": "babel src -d dist",
    "bundle": "browserify dist/index.js -o dist/client.js",
    "minify": "uglifyjs dist/client.js -m -c drop_console,dead_code -d debug=false -o dist/client.min.js",
    "build": "npm run babel && npm run ignore && npm run bundle && npm run minify",
    "test": "istanbul test ./node_modules/mocha/bin/_mocha --report html -- -R spec",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && rm -rf ./coverage"
  },
  "browser": {
    "colors": false
  },
  "license": "pemrouz.mit-license.org",
  "devDependencies": {
    "babel": "^4.6.3",
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "browserify": "^9.0.3",
    "uglify-js": "^2.4.16"
  },
  "dependencies": {
    "colors": "^1.1.0",
    "utilise": "*"
  }
}
